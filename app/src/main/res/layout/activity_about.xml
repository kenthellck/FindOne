<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.praveen.findone.About"
    android:weightSum="1"
    android:background="#494949">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About"
        android:background="#ffb700"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Find one in neeed is an Android Application which can be used to find items, or else you can also use this app to find someone.

 If you lack of something you can simply tell others what you want and if you want to give what you have you can post your item as well.

"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff"
        android:background="#494949"
        android:autoText="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Developed By"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="#ffb700" />
<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="87dp"
        android:layout_height="50dp"
        android:src="@mipmap/ck"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dhanujaya Praveen
praveengunaratna@yahoo.com

071-5115969"
        android:id="@+id/textView4"
        android:layout_row="0"
        android:layout_column="1"
        android:textSize="14dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff" />
    <ImageView
        android:layout_width="87dp"
        android:layout_height="45dp"
        android:id="@+id/imageView2"
        android:src="@mipmap/arch"
        android:layout_row="1"
        android:layout_column="0"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Archana Kugathasan
archchanakugathasan@gmail.com
077-4624109"
        android:id="@+id/textView5"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:textSize="14dp"
        android:textColor="#ffffff" />

</GridLayout>


</LinearLayout>
